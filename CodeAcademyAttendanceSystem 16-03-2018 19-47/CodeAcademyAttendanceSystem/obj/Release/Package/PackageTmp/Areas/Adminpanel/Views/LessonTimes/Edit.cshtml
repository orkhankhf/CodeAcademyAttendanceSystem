@model CodeAcademyAttendanceSystem.Models.Lesson_Times

@{
    ViewBag.Title = "Dərs Saatı Məlumatlarını Redaktə Et / Sil";
    Layout = "~/Areas/Adminpanel/Views/Shared/_AdminpanelLayout.cshtml";
}

<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">
        <div id="breadcrumb"> <a href="@Url.Action("Index", "Dashboard", new { Area="Adminpanel"})" title="Ana Səhifəyə Get" class="tip-bottom"><i class="icon-home"></i> Ana Səhifə</a>  <a href="@Url.Action("Index", "LessonTimes", new { Area="Adminpanel"})" title="Dərs Saatı Redaktə Et / Sil" class="tip-bottom"><i class="icon-time"></i> Dərs Saatı Redaktə Et / Sil</a> <a href="@Url.Action("Edit", "LessonTimes", new { Area="Adminpanel", id=@Model.lesson_times_id})" title="@Model.lesson_times_name (@Model.Group_Schedule.group_schedule_name / @Model.lesson_times_start_time - @Model.lesson_times_end_time)" class="tip-bottom"><i class="icon-time"></i> @Model.lesson_times_name (@Model.Group_Schedule.group_schedule_name / @Model.lesson_times_start_time - @Model.lesson_times_end_time)</a></div>
    </div>
    <!--End-breadcrumbs-->
    <div class="container-fluid">
        <hr />
        <div class="row-fluid">
            <div class="span6">
                <div class="widget-box">
                    <div class="widget-title">
                        <span class="icon"> <i class="icon-align-justify"></i> </span>
                        <h5>Dərs Saatı Məlumatları</h5>
                    </div>
                    <div class="widget-content nopadding">
                        @using (Html.BeginForm("Edit", "LessonTimes", new { Area = "Adminpanel" }, FormMethod.Post, new { @class = "form-horizontal", name = "basic_validate", id = "basic_validate", novalidate = "novalidate" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.lesson_times_id)
                                <div class="control-group required">
                                    <label class="control-label">Dərs Saatı Adı </label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.lesson_times_name, new { htmlAttributes = new { @class = "span11 blabla", minlength = "2", maxlength = "50", required = "required" } })
                                    </div>
                                </div>

                                <div class="control-group required">
                                    <label class="control-label">Başlama vaxtı </label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.lesson_times_start_time, new { htmlAttributes = new { @class = "form-control span11", placeholder = "09:00", required = "required" } })
                                    </div>
                                </div>

                                <div class="control-group required">
                                    <label class="control-label">Bitmə vaxtı </label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.lesson_times_end_time, new { htmlAttributes = new { @class = "form-control span11", placeholder = "13:00", required = "required" } })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">Dərs Günü </label>
                                    <div class="controls">
                                        @Html.DropDownList("lesson_times_group_schedule_id", null, htmlAttributes: new { @class = "form-control span11" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <div class="controls">
                                        <input type="submit" value="Yadda Saxla" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles{
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/uniform.css" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/select2.css" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/matrix-style.css" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/matrix-media.css" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/font-awesome/css/font-awesome.css" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/assets/css/style.css" />
}
@section scripts {
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/jquery.min.js"></script>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/jquery.ui.custom.js"></script>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/bootstrap.min.js"></script>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/jquery.uniform.js"></script>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/select2.min.js"></script>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/jquery.validate.js"></script>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/matrix.js"></script>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/matrix.form_validation.js"></script>
}