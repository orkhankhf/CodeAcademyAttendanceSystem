
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Code Academy Tələbə Davamiyyəti Sistemi - Giriş </title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Areas/Adminpanel/Assets-Adminpanel/css/matrix-login.css" />
    <link href="~/Areas/Adminpanel/Assets-Adminpanel/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
    <link href="~/assets/css/style.css" rel="stylesheet" />
</head>
<body>
    <div id="loginbox">
        <form id="loginform" class="form-vertical set_password_form" method="post" action="@Url.Action("SetNewPassword", "Login")">
            <div class="control-group normal_text"><h3>Şifrə Yeniləmə</h3></div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <input type="password" id="password" name="password" placeholder="Yeni Şifrə"/>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <input type="password" id="confirm_password" name="confirm_password" placeholder="Şifrənizi Təsdiqləyin"/>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span id="set_password_error_message" class="color_white">
                            @{ 
                                if(ViewBag.SetNewPasswordError != null)
                                {
                                    @ViewBag.SetNewPasswordError;
                                }
                            }
                        </span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-primary login_btn">Yadda Saxla</button>
            </div>
        </form>
    </div>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/jquery.min.js"></script>
    <script src="~/Areas/Adminpanel/Assets-Adminpanel/js/matrix.login.js"></script>

    <script>
        $(".login_btn").click(function () {
            var password = $("#password").val();
            var confirm_password = $("#confirm_password").val();
            if (password != confirm_password) {
                $("#set_password_error_message").text("Şifrələr eyni deyil!");
            } else {
                $(".set_password_form").submit();
            }            
        });
    </script>
</body>
</html>

